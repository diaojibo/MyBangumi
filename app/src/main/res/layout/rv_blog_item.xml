<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="120dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/bangumiicon2"
            android:id="@+id/rv_blog_img"
            android:layout_width="77dp"
            android:layout_height="81dp" />
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="100dp">

            <TextView
                android:text="Title"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#0187C5"
                android:id="@+id/rv_blog_title"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by:"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/rv_blog_author"
                    android:layout_height="wrap_content"
                    android:text="Author "
                    android:textColor="#0187C5"
                    />
                <TextView
                    android:id="@+id/rv_blog_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:xxxx-xx-xx"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/rv_blog_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>